<UserControl
    x:Class="TunrRT.Controls.LibraryBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TunrRT.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:TunrRT.Converters"
    xmlns:sample="using:TunrRT.SampleData"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="340"
    DataContext="{Binding Source={StaticResource Data}}">

    <d:Page.DataContext>
        <sample:SampleDataSource />
    </d:Page.DataContext>
    
    <UserControl.Resources>
        <converter:ToLowercaseConverter x:Key="ToLowercaseConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DataTemplate x:Key="ArtistListTemplate">
            <local:ArtistListControl DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Key="AlbumListTemplate">
            <local:AlbumListControl DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate x:Key="TrackListTemplate">
            <local:TrackListControl DataContext="{Binding}" />
        </DataTemplate>
        <local:LibraryListTemplateSelector x:Key="LibraryListTemplateSelector"
                                           TrackListTemplate="{StaticResource TrackListTemplate}"
                                           AlbumListTemplate="{StaticResource AlbumListTemplate}"
										   ArtistListTemplate="{StaticResource ArtistListTemplate}"/>
    </UserControl.Resources>

    <Grid Margin="16 16 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0 0 0 16">
            <ListView x:Name="ListBackStack" ItemsSource="{Binding BrowseLists}" IsItemClickEnabled="True" ItemClick="ListBackStack_ItemClick">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0 2" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground="Black" Text="{Binding ListName, Converter={StaticResource ToLowercaseConverter}}" FontWeight="Light" FontSize="64" TextLineBounds="Tight" TextTrimming="Clip" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding BrowseLists}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid Grid.Row="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentControl VerticalAlignment="Stretch" Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Content="{Binding}" ContentTemplateSelector="{StaticResource LibraryListTemplateSelector}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
