<UserControl
    x:Class="TunrRT.UserControls.ArtistListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TunrRT.UserControls"
	xmlns:data="using:TunrRT.DataModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
	d:DataContext="{Binding Source={d:DesignData Source=/DataModel/SampleData.json, Type=data:DataSource}, Path=BrowseLists[0]}">

	<ListView ItemsSource="{Binding Results}">
		<ListView.ItemTemplate>
			<DataTemplate>
				<TextBlock Text="{Binding Artist}" Foreground="Black" />
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</UserControl>
